pipeline {
    agent any
    environment {
        PATH = "$PATH://usr/share/maven/"
    }
    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/hasretagaslan/jenkins-project.git'
            }
        }
        stage('Create Jar Files') {
            steps {
                sh 'cd ./RestApi && mvn clean package'
            }
        }
        stage('SonarQube analysis') {
    withSonarQubeEnv(credentialsId: 'squ_bb9525d5cb153eac830c50a0d733c0128494e107', installationName: 'sonarScanner') { // You can override the credential to be used
      sh 'mvn org.sonarsource.scanner.maven:sonar-maven-plugin:3.7.0.1746:sonar'
    }
  }
}
        stage('Docker Image Build') {
            steps {
                sh 'docker build -t house:0.0.1 -f ./RestApi/Dockerfile .'
            }
        }
        stage('Docker push Nexus') {
            steps {
                sh 'docker login localhost:31551 -u admin -p admin'
                sh 'docker tag house localhost:31551/house:0.0.1'
                sh 'docker push localhost:31551/house:0.0.1'
            }
        }
        stage('Change House Version') {
            steps {
                sh "sed -i 's/oldVersion/newVersion/' repoAddress/house.yaml"
                sh "git add ."
                sh "git commit -m 'change version by Jenkins'"
                sh "git push origin master"
            }
        }
        stage('Deploy new Version') {
            steps {
                sh "kubectl apply -f repoAddress/house.yaml"
            }
        }
    }
}